{
    "name": "nadyita/phpstan-amp-file-rule",
    "description": "A PHPStan rule to detect the use of sync filesystem calls for which there are async counterparts. Must be used in conjunction with amphp/file",
    "type": "phpstan-extension",
    "license": "MIT",
    "authors": [
        {
            "name": "Nadyita",
            "email": "nadyita@hodorraid.org"
        }
    ],
    "require": {
        "php": "^8.1.17",
        "phpstan/phpstan": "^1 || ^2"
    },
    "require-dev": {
        "nadybot/nadystyle": "^1.0.0",
        "composer-phar/php-cs-fixer": "^3.51.0",
        "thecodingmachine/safe": "^1.0 || ^2.0 || ^3.0",
        "nikic/php-parser": "^4 || ^5"
    },
    "autoload": {
        "psr-4": {
            "Nadyita\\PHPStan\\Rules\\": "src/"
        }
    },
    "extra": {
        "phpstan": {
            "includes": [
                "phpstan-amp-file-rule.neon"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
